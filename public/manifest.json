{
    "manifest_version": 2,
    "name": "MicroTrello",
    "short_name": "micro-trello",
    "version": "1.0.0",
    "description": "A very tiny browser task management app for your personnal and private usage.",
    "icons": {
        "16": "microtrello-16.png",
        "32": "microtrello-32.png",
        "150": "microtrello-150.png"
    },
    "permissions": [],
    "chrome_url_overrides": {
      "newtab": "./index.html"
    },
    "browser_action": {
        "default_title": "MicroTrello",
        "default_popup": "index.html"
    }
}